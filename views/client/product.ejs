<script type="text/javascript" src="/js/lib/bootstrap.js"></script>
<script src="/js/myjs.js"></script>

<script>
    $(document).ready(function () {
        $('.img-child').on('click', '.img', function () {
            var url = $(this).attr('data-url');
            $('.image-root img').attr('src', url);
        });
    });
</script>

</body>
</html>

